@model IEnumerable<EQ.Models.Ticket>

<div class="responsiveFullPageDiv">
    <h2>My Tickets</h2>

    <table class="table">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Service.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.TicketNumber)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Service.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketNumber)
                </td>
                <td>
                    
                        @Html.ActionLink("Θέαση", "Details", new { id = item.TicketId }, new { @class = "btn btn-default btn-lg", style = "text-align:center; line-height:1.7;  font-size: 11px;  background-color:lightblue;" })
                    
                </td>
            </tr>
        }

    </table>
    <p style="float:right;">
            @Html.ActionLink("Καινούργιο νούμερο", "Create",null, new { @class = "btn btn-default btn-lg", style = "text-align:center; line-height:1.7;  font-size: 11px;  background-color:greenyellow; margin-right:5%;" })
    </p>
</div>